<script>
function obterProximaData(diaSemana) {
  const hoje = new Date();
  const diferencaDias = (diaSemana - hoje.getDay() + 7) % 7;
  const proximaData = new Date(hoje.getTime() + diferencaDias * 24 * 60 * 60 * 1000);

  const dia = String(proximaData.getDate()).padStart(2, '0');
  const mes = String(proximaData.getMonth() + 1).padStart(2, '0');
  const ano = proximaData.getFullYear();

  return `${dia}/${mes}/${ano}`;
}

const SEGUNDA = 1;
const TERCA = 2;
const QUARTA = 3;
const QUINTA = 4;
const SEXTA = 5;

const segundaMaisProxima = obterProximaData(SEGUNDA);
const terçaMaisProxima = obterProximaData(TERCA);
const quartaMaisProxima = obterProximaData(QUARTA);
const quintaMaisProxima = obterProximaData(QUINTA);
const sextaMaisProxima = obterProximaData(SEXTA);

document.getElementById('segHeader').innerHTML = segundaMaisProxima
document.getElementById('terHeader').innerHTML = terçaMaisProxima
document.getElementById('quaHeader').innerHTML = quartaMaisProxima
document.getElementById('quiHeader').innerHTML = quintaMaisProxima
document.getElementById('sexHeader').innerHTML = sextaMaisProxima

document.getElementById('segHeaderMobile').innerHTML = segundaMaisProxima
document.getElementById('terHeaderMobile').innerHTML = terçaMaisProxima
document.getElementById('quaHeaderMobile').innerHTML = quartaMaisProxima
document.getElementById('quiHeaderMobile').innerHTML = quintaMaisProxima
document.getElementById('sexHeaderMobile').innerHTML = sextaMaisProxima

</script>